<section id="portfolio" class="portfolio">
  <h2 class="portfolio-title">Portfolio</h2>
  <div class="portfolio-filter">
    <button class="filter-btn active" data-filter="all">Tous</button>
    <button class="filter-btn" data-filter="web">Sites Web</button>
    <button class="filter-btn" data-filter="design">Design</button>
    <button class="filter-btn" data-filter="dev">Développement</button>
  </div>

  <div class="portfolio-grid">
    {% set projects = [
      {
        title: "Site internet pour une Coach Sportive",
        category: "web",
        tags: ["Vercel", "React"],
        image: "portfolio-nono.png",
        link: "https://www.noemie-coach.fr/"
      },
      {
        title: "Site pour une agence d'évènementiel - 724 Events",
        category: "web",
        tags: ["Performances", "Accessibilité", "SEO"],
        image: "portfolio-724events.png",
        link: "https://github.com/Tatitatouu/Neuvi-meProjet"
      },
      {
        title: "Portfolio d'une Architecte - Sophie Bluel",
        category: "design",
        tags: ["Front-end", "Back-end", "API"],
        image: "portfolio-sophiebluel.png",
        link: "https://github.com/Tatitatouu/Sixi-meProjet"
      },
      {
        title: "Site d'un restaurant - Oh My Food",
        category: "dev",
        tags: ["Responsive", "Animation", "SASS"],
        image: "portfolio-ohmyfood.png",
        link: "https://tatitatouu.github.io/Quatri-meProjet/"
      }
    ] %}

    {% for project in projects %}
      <div class="portfolio-card" data-category="{{ project.category }}">
        <div class="card-inner">
          <div class="card-front">
            <img 
              src="{{ asset('assets/images/' ~ project.image) }}" 
              alt="{{ project.title }}" 
              class="portfolio-image" 
            />
            <div class="overlay">
              <h3 class="portfolio-name">{{ project.title }}</h3>
            </div>
          </div>
          <div class="card-back">
            <h3>{{ project.title }}</h3>
            <div class="tags">
              {% for tag in project.tags %}
                <span class="tag">{{ tag }}</span>
              {% endfor %}
            </div>
            <a href="{{ project.link }}" class="view-project" target="_blank" rel="noopener noreferrer">
              Voir le projet
              <i class="fas fa-arrow-right"></i>
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>