<section class="portfolio">
    <h2>Mes Projets</h2>
    <div class="projects">
        {% for project in projects %}
            <div class="project">
                <img src="{{ asset('images/' ~ project.image) }}" alt="{{ project.title }}">
                <h3>{{ project.title }}</h3>
                <p>{{ project.description }}</p>
            </div>
        {% endfor %}
    </div>
</section>